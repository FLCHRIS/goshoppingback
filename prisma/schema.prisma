generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String?
  publicId  String?
  createdAt DateTime @default(now())
  user      User?
  product   Product?
}

model User {
  id        Int       @id @default(autoincrement())
  imageId   Int       @unique
  userName  String
  password  String
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now())
  products  Product[]
  image     Image     @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Product {
  id          Int      @id @default(autoincrement())
  userId      Int
  imageId     Int      @unique
  name        String
  description String
  price       Float
  category    String
  stock       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  image       Image    @relation(fields: [imageId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
